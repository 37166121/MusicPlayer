<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center|start"
        app:layout_constraintEnd_toStartOf="@+id/iv_remove"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_music_playing"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:src="@drawable/ic_playing"
            app:tint="@color/select_music_list_item" />

        <!-- <com.aliyunm.musicplayer.widget.WidgetMusicTitleTextView -->
        <!--     android:layout_width="wrap_content" -->
        <!--     android:layout_height="wrap_content" -->
        <!--     android:text="aaaa"/> -->

        <TextView
            android:id="@+id/tv_music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Illusion"
            android:theme="@style/Text.Title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="-"
            android:theme="@style/Text.SubSmall" />

        <TextView
            android:id="@+id/tv_music_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Matilda"
            android:theme="@style/Text.SubSmall" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_remove"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@drawable/ic_close_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/text_color" />

    <ImageView
        android:id="@+id/iv_move"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:padding="10dp"
        android:src="@drawable/ic_move_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/text_color" />

</androidx.constraintlayout.widget.ConstraintLayout>